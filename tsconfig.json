{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": false,
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false, 
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    
    "noEmit": true, 
    "declaration": false, 
    "declarationMap": false 
  },
  "include": [
    "src/**/*.astro",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.tsx",
    "src/**/*.jsx"
  ],
  "exclude": ["node_modules", "dist"]
}
