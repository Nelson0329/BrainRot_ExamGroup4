---
// Layout del QUIZ:
const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* Estilos globales para el layout del quiz */
        body {
            font-family: 'Inter', sans-serif;
            background-color: #1a1a1a;
            color: #e0e0e0;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center; 
            min-height: 100vh;
            overflow-x: hidden; 
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }
        
        h1 {
            color: #e0e0e0;
            margin-top: 3rem; 
            margin-bottom: 2rem;
            text-align: center;
            font-size: 3rem;
            font-weight: 700;
            text-shadow: 0 2px 4px rgba(0,0,0,0.2);
            width: 90%; 
            max-width: 800px; 
            padding: 0 1rem; 
            box-sizing: border-box; 
        }
        
        p {
            font-size: 1.25rem;
            color: #b0b0b0;
            margin-bottom: 2rem;
            text-align: center;
            max-width: 700px;
            padding: 0 1rem;
            box-sizing: border-box; 
        }

/* Adjustes para dispositivos m√≥viles */
        @media (max-width: 768px) {
            h1 {
                font-size: 2.2rem; 
                margin-top: 1.5rem; 
            }

            h2 {
                font-size: 1.5rem; 
                margin-top: 1rem; 
            }
            
            p {
                font-size: 1.1rem; 
            }
        }
    </style>
</head>
<body>
    <slot />
</body>
</html>